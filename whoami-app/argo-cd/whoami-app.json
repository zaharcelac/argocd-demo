{
    "metadata": {
        "name": "whoami-app"
    },
    "spec": {
        "source": {
            "repoURL": "https://github.com/zaharcelac/argocd-demo",
            "path": "whoami-app",
            "targetRevision": "HEAD",
            "helm": {
                "parameters": [
                    {
                        "name": "WHOAMI_NAME",
                        "value": "zcelac-whoami-v2"
                    },
                    {
                        "name": "REPLICAS_COUNT",
                        "value": "3"
                    }
                ]
            }
        },
        "destination": {
            "server": "https://kubernetes.default.svc",
            "namespace": "apps"
        },
        "project": "apps",
        "syncPolicy": {}
    }
}